<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <h5 class="pb-4 mt-5">
        <span class="midashi px-3">配送先編集</span>
      </h5>
    </div>
  </div>

    <%= form_with model:@delivery,local:true do |f|%>
      <div class="form-group row">
        <div class="col-3">
          <%=f.label :"郵便番号(ハイフンなし)"%>
        </div>
        <div class="col-9">
          <%=f.text_field :postcode%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-3">
          <%=f.label :住所%>
        </div>
        <div class="col-9">
          <%=f.text_field :address,size:60%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-3">
          <%=f.label :宛名%>
        </div>
        <div class="col-6">
          <%=f.text_field :address_name%>
        </div>
        <div class="col-3">
          <%=f.submit" 変更内容を保存 ",class:"btn btn-success"%>
        </div>
      </div>
  <%end%>

</div>

