<div class="container">
  <div class="row">
    <div class="col my-3">
      <h5 class="mb-4 ml-5">
        <span class="midashi px-3"> 新規会員登録 </span>
      </h5>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <div class="col-4"><span>名前</span></div>
          <div class="col-1">
            <%=f.label :"(姓)"%>
          </div>
          <div class="col-3">
            <%=f.text_field :last_name,:placeholder=>"令和"%>
          </div>
          <div class="col-1">
            <%=f.label :"(名)"%>
          </div>
          <div class="col-3">
            <%=f.text_field :first_name,:placeholder=>"道子"%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-4"><span>フリガナ</span></div>
          <div class="col-1">
            <%=f.label :"(セイ)"%>
          </div>
          <div class="col-3">
            <%=f.text_field :last_name_kana,:placeholder=>"レイワ"%>
          </div>
          <div class="col-1">
            <%=f.label :"(メイ)"%>
          </div>
           <div class="col-3">
            <%=f.text_field :first_name_kana,:placeholder=>"ミチコ"%>
           </div>
        </div>

        <div class="form-group row">
          <div class="col-md-5">
            <%= f.label :メールアドレス %>
          </div>
          <div class="col-md-7">
            <%= f.email_field :email, autocomplete: "email" ,:placeholder=>"sample@example.com"%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-5">
            <%=f.label :郵便番号（ハイフンなし）%>
          </div>
          <div class="col-md-7">
            <%=f.text_field :postcode,:placeholder=>"0000000"%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-5">
            <%=f.label :住所%>
          </div>
          <div class="col-md-7">
            <%=f.text_field :address,:placeholder=>"東京都渋谷区代々木神園町0-0",size:60%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-5">
            <%=f.label :電話番号（ハイフンなし）%>
          </div>
          <div class="col-md-7">
            <%=f.text_field :call_number,:placeholder=>"00000000000"%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-5">
            <%= f.label :パスワード%>
            <% if @minimum_password_length %>
            <span>(<%= @minimum_password_length %> 文字以上)</span>
            <% end %>
          </div>
          <div class="col-md-7">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-5">
            <%= f.label :パスワード（確認用） %>
          </div>
          <div class="col-md-7">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5"></div>
          <div class="col-7">
            <%= f.submit "         新規登録         " ,class:"btn btn-success"%>
          </div>
        </div>
      <% end %>
      <h5 class="ml-3">
        <span class="midashi px-3"> 既に登録済みの方 </span>
      </h5>
      <div class="ml-5">
         <%=link_to"こちら",new_customer_session_path%>からログインしてください。
      </div>
    </div>
  </div>
</div>


