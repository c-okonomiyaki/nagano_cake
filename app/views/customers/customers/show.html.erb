<h2>マイページ</h2>
<div class='row'>
  <p>登録情報</p>
  <%= link_to '編集する', root_path %>
</div>
<table class='table'>
  <tr>
    <th>氏名</th>
    <th><%= @customer.last_name %> <%= @customer.first_name %></th>
  </tr>
  <tr>
	  <th>カナ</th>
	  <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
  </tr>
  <tr>
	  <th>郵便番号</th>
	  <th><%= @customer.postcode %></th>
  </tr>
  <tr>
    <th>住所</th>
    <th><%= @customer.address %></th>
  </tr>
  <tr>
    <th>電話番号</th>
    <th><%= @customer.call_number %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @customer.email %></th>
  </tr>
</table>

<div class='row'>
  <p>配送先</p>
  <%= link_to '一覧を見る', root_path %>
</div>

<div class='row'>
  <p>注文履歴</p>
  <%= link_to '一覧を見る', root_path %>
</div>
