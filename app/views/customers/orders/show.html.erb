<div class="container">
    <div class="row">
      <div class="col-1"></div>
        <h5 class="col-11 pb-4 mt-5">
            <span class="midashi px-3">注文履歴詳細</span>
        </h5>
    </div>

    <div class="row">
      <div class="col-9">
        <strong>注文情報</strong>
        <table class="table table-bordered">
          <tbody>
            <tr>
                <td style="background-color:#f5f5f5;">注文日</td>
                <td><%=@order.created_at.strftime("%Y/%m/%d")%></td>
            </tr>
            <tr>
                <td style="background-color:#f5f5f5;">配送先</td>
                <td>
                  〒<%=@order.postcode%><br>
                  <%=@order.address%><br>
                  <%=@order.name%>
                </td>
            </tr>
            <tr>
                <td style="background-color:#f5f5f5;">支払い方法</td>
                <td><%=@order.payment_method%></td>
            </tr>
            <tr>
                <td style="background-color:#f5f5f5;">ステータス</td>
                <td><%=@order.order_status%></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-3">
      <strong>請求情報</strong>
      <table class="table table-bordered">
        <tbody>
            <tr>
                <td style="background-color:#f5f5f5;">商品合計</td>
                <td><%=@total.to_s(:delimited)%></td>
            </tr>
            <tr>
                <td style="background-color:#f5f5f5;">配送料</td>
                <td><%=@order.postage%></td>
            </tr>
            <tr>
                <td class="font-weight-bold" style="background-color:#f5f5f5;">ご請求額</td>
                <td><%=(@total+@order.postage).to_s(:delimited)%></td>
            </tr>
        </tbody>
      </table>
      </div>
    </div>

    <div class="row">
      <div class="col-10">
      <strong>注文内容</strong>
      <table class="table table-bordered">
        <thead>
          <tr style="background-color:#f5f5f5;">
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <%@order_details.each do |order_detail|%>
          <tr>
            <td><%=order_detail.item.item_name%></td>
            <td><%=(order_detail.item.price).to_s(:delimited)%></td>
            <td><%=order_detail.quantity%></td>
            <td><%=((order_detail.item.price)*(order_detail.quantity)).to_s(:delimited)%></td>
          </tr>
          <%end%>
        </tbody>
      </table>
      </div>
    </div>
  <div class="my-3"></div>
</div>

