<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <h5 class="my-5">
        <span class="midashi px-3">注文履歴一覧</span>
      </h5>
    </div>
  </div>

  <div class="row">
    <div class="col-10 mx-auto">
    <%if @orders.present?%>
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <%@orders.each do |order|%>
          <tr>
            <td><%=order.created_at.strftime("%Y/%m/%d")%></td>
            <td>
              〒<%=order.postcode%><br>
              <%=order.address%><br>
              <%=order.name%>
            </td>
            <td>
              <%order.order_details.each do |order_detail|%>
                <%=order_detail.item.item_name%><br>
              <%end%>
            </td>
            <td><%=order.claim.to_s(:delimited)%>円</td>
            <td><%=order.order_status%></td>
            <td>
              <%=link_to"表示する",order_path(order.id),class:"btn btn-success"%>
            </td>
          </tr>
          <%end%>
        </tbody>
      </table>
    <%else%>
      <p>注文履歴はありません。</p>
    <%end%>
    </div>
  </div>
</div>


