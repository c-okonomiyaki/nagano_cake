<div class="container">
    <div class="row">
      <div class="col-1"></div>
        <h5 class="col-11 pb-4 mt-5">
            <span class="midashi px-3">注文情報確認</span>
        </h5>
    </div>

  <%=form_with model:@order,local:true do |f|%>
    <div class="row">
      <div class="col-9">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <%@cart_items.each do |cart_item|%>
            <tr>
                <td><%=cart_item.item.item_name%></td>
                <td><%=(cart_item.item.price).to_s(:delimited)%></td>
                <td><%=cart_item.quantity%></td>
                <td><%=(cart_item.item.price*cart_item.quantity).to_s(:delimited)%></td>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <div class="col-3">
      <table class="table table-bordered">
        <tbody>
            <tr>
                <td>送料</td>
                <td>800</td>
            </tr>
            <tr>
                <td>商品合計</td>
                <td><%=@total%></td>
            </tr>
            <tr>
                <td>請求金額</td>
                <td><%=@total+800%></td>
            </tr>
        </tbody>
      </table>
      </div>
    </div>

    <div class="row">
      <div class="col-3">支払い方法</div>
      <div class="col-9"><%=@order.payment_method%></div>
    </div>
    <div class="row">
      <div class="col-3">お届け先</div>
      <div class="col-9"><%=@order.address%></div>
    </div>

    <div class="row">
      <div class="mx-auto">
        <%= f.hidden_field :payment_method,:value=>@order.payment_method %>
        <%= f.hidden_field :name,:value=>@order.name %>
        <%= f.hidden_field :address,:value=>@order.address %>
        <%= f.hidden_field :postcode,:value=>@order.postcode %>
        <%= f.hidden_field :postage,:value=>800 %>
        <%= f.hidden_field :claim, :value=>@total+800 %>
        <%=f.submit " 注文を確定する ",class:"btn btn-success"%>
      </div>
    </div>
    <%end%>
</div>

