<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-10">
      <div class="my-3">
        <h5 class="pb-4 mt-3">
          <span class="midashi px-3">注文情報入力</span>
        </h5>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-6 mx-auto pb-5">
      <%= form_with model:@order,local:true do |f| %>
        <div class="form-group row">
          <div class="col-4">
            <%= f.label :支払い方法 ,class:"pl-3"%>
          </div>
          <div class="col-8">
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-4">
            <%= f.label :商品名,class:"pl-3"%>
          </div>
          <div class="col-8">
            <%= f.text_field :item_name,:placeholder=>"商品名",size:30%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-4">
            <%= f.label :商品説明,class:"pl-3"%>
          </div>
          <div class="col-8">
            <%= f.text_area :introduction,:placeholder=>"ここに説明文を記述します",size:"30x5"%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-4">
            <%= f.label :ジャンル,class:"pl-3"%>
          </div>
          <div class="col-8">
            <%= f.collection_select(:genre_id, @genres, :id, :genre_name, {prompt: "--選択してください--"})%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-4">
            <%= f.label :税抜価格,class:"pl-3"%>
          </div>
          <div class="col-8">
            <%= f.text_field :price,:placeholder=>"1000",size:30%>円
          </div>
        </div>

        <div class="form-group row">
          <div class="col-4">
            <%= f.label :販売ステータス,class:"pl-3"%>
          </div>
          <div class="col-8">
            <%= f.radio_button :is_active, true%>販売中  <%= f.radio_button :is_active, false%>販売停止中
          </div>
        </div>

        <div class="form-group row">
          <div class="col-4"></div>
          <div class="col-8">
            <%= f.submit "  新規登録  ",class:"btn btn-success"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>

