<%= stylesheet_link_tag "customers/items", :media => "all" %>
<link href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" rel="stylesheet">

<body>
  <div class="container">
    <div class="row">
      <div class="toppage">
        <h2><b>商品一覧</b><span class="total_count">(全<%= @items.total_count %>件)</span></h2>
      </div>
      <div class="item-box">
        <% @items.each do |item| %>
          <%= render "item_each", item: item %>
	      <% end %>
	    </div>
	    <div class="item-pagenate"><%= paginate @items %></div>
	  </div>
  </div>
</body>