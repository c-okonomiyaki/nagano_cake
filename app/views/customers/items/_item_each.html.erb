<div class="item-container">
    <%= link_to item_path(item.id), class: "btn-link" do %>
    <div class="image-field">
      <%= image_tag item.item_image ,size:"180x130"%>
    </div>
    <p class="item-name">
      <%= item.item_name %>
    </p>
    <% end %>

  <% if item.is_active == true %>
    <p class="item-price">¥<%= item.price.to_s(:delimited) %></p>
  <% elsif item.is_active == false %>
    <p class="soldout">売り切れ中</p>
  <% end %>
</div>