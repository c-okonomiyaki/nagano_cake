<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-10">
      <div class="my-3">
        <h5 class="pb-4 mt-3">
          <span class="midashi px-3">商品新規登録</span>
        </h5>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto pb-5">
      <%= form_with model:@item,local:true do |f| %>
        <div class="form-group row">
          <div class="col-5">
            <%= f.label :メールアドレス %>
          </div>
          <div class="col-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:placeholder=>"sample@example.com",size:40%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5">
            <%= f.label :パスワード %>
          </div>
          <div class="col-7">
            <%= f.password_field :password, autocomplete: "current-password" ,size:40%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5"></div>
          <div class="col-7">
            <%= f.submit "  ログイン  ",class:"btn btn-primary"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
