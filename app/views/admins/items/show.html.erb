<div class="container">
    <div class="row">
      <div class="col-1"></div>
        <h5 class="col-11 pb-4 mt-5">
            <span class="midashi px-3">商品詳細</span>
        </h5>
    </div>

    <div class="row">
      <div class="col-4 mx-auto">
        <%=image_tag @item.get_item_image,size:"250x250"%>
      </div>
      <div class="col-8">
      <table class="table table-borderless">
        <tbody>
            <tr>
                <td class="col-2">商品名</td>
                <td class="col-6"><%=@item.item_name%></td>
            </tr>
            <tr>
                <td class="col-2">商品説明</td>
                <td class="col-6"><%=@item.introduction%></td>
            </tr>
            <tr>
                <td class="col-2">ジャンル</td>
                <td class="col-6"><%=@item.genre.genre_name%></td>
            </tr>
            <tr>
                <td class="col-2">税込価格<br>(税抜き価格)</td>
                <td class="col-6"><%=(@item.price*1.08).round%>(<%=@item.price%>)円</td>
            </tr>
            <tr>
                <td class="col-2">販売ステータス</td>
                <%if @item.is_active==false%>
                  <td class="text-muted font-weight-bold">販売停止中</td>
                <%else%>
                  <td class="text-success font-weight-bold">販売中</td>
                <%end%>
            </tr>
        </tbody>
      </table>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto">
        <%=link_to"  編集する  ",edit_admins_item_path(@item.id),class:"btn btn-success mb-5"%>
      </div>
    </div>
</div>

