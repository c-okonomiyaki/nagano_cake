<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <h5 class="my-5">
        <span class="midashi px-3">注文履歴詳細</span>
      </h5>
    </div>
  </div>
  <div class="row">
      <div class="col-9">
        <%= form_with model: @order, url: admins_order_path, method: :patch do |f| %>
        <table height="250">
          <tbody>
            <tr>
              <td width="200px"><b>購入者</b></td>
              <td><%= @order.name %></td>
            </tr>
            <tr>
              <td><b>注文日</b></td>
              <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
            </tr>
            <tr>
              <td valign="top"><b>配送先</b></td>
              <td>
                  〒<%=@order.postcode%><br>
                  <%=@order.address%><br>
                  <%=@order.name%>
              </td>
            </tr>
            <tr>
                <td><b>支払い方法</b></td>
                <td><%=@order.payment_method%></td>
            </tr>
            <tr>
                <td><b>注文ステータス</b></td>
                <td>
                  <%= f.select :order_status, Order.order_statuses_i18n.invert %>
                  <%= f.submit "更新", class: "btn btn-success" %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row mt-5">
      <table class="col-8 table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail|%>
          <tr>
            <td><%=order_detail.item.item_name%></td>
            <td><%=(order_detail.item.price*1.10).round.to_s(:delimited) %></td>
            <td><%=order_detail.quantity%></td>
            <td><%= ((order_detail.item.price*1.10).round*(order_detail.quantity)).to_s(:delimited)%></td>
			      <td>
   	          <%= form_with model: order_detail , url: admins_order_detail_path(order_detail.id) , method: :patch , local: true do |f| %>
			        <%= f.select :production_status, OrderDetail.production_statuses_i18n.invert %>
			        <%= f.submit '更新' ,class: "btn btn-success" %>
			        <% end %>
			      </td>
          </tr>
          <%end%>
        </tbody>
      </table>
			<div class="col-3 ml-3" style="margin-top:100px">
			  <table align="right">
			    <thead>
			      <tr>
			        <td width="150px"><b>商品合計</b></td>
			        <td>¥<%= @total.to_s(:delimited) %></td>
			      </tr>
			      <tr>
			        <td><b>送料</b></td>
			        <td>¥<%= @order.postage.to_s(:delimited) %></td>
			      </tr>
			      <tr>
			        <td><b>請求金額合計</b></td>
			        <td><b>¥<%= (@total+@order.postage).to_s(:delimited) %></b></td>
			      </tr>
			    </thead>
			  </table>
      	<div></div>
				<div></div>
				<div></div>
	    </div>
	  </div>
  </div>
</div>