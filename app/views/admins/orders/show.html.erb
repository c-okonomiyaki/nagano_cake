<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <h5 class="my-5">
        <span class="midashi px-3">注文履歴詳細</span>
      </h5>
    </div>
  </div>
  <div class="row">
      <div class="col-9">
        <table>
          <tbody>
            <tr>
              <td>購入者</td>
              <td><%= @order.name %></td>
            </tr>
            <tr>
              <td>注文日</td>
              <td><%= @order.created_at %></td>
            </tr>
            <tr>
              <td>配送先</td>
              <td>
                  〒<%=@order.postcode%><br>
                  <%=@order.address%><br>
                  <%=@order.name%>
              </td>
            </tr>
            <tr>
                <td>支払い方法</td>
                <td><%=@order.payment_method%></td>
            </tr>
            <tr>
              <%= form_with model:@order, url: admins_order_path, method: :patch do |f| %>
                <td>注文ステータス</td>
                <td>
                  <%= f.select :order_status, Order.order_statuses_i18n.invert %>
                  <%= f.submit "更新", class: "btn btn-success" %>
                </td>
              <% end %>
            </tr>

          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <table class="col-8 table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>個数</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail|%>
          <tr>
            <td><%=order_detail.item.item_name%></td>
            <td><%=(order_detail.item.price).to_s(:delimited)%></td>
            <td><%=order_detail.quantity%></td>
            <td><%=((order_detail.item.price)*(order_detail.quantity)).to_s(:delimited)%></td>
            <%= form_with model:order_detail , url: admins_order_detail_path(order_detail.id) , method: :patch , local: true do |f| %>
			      <td>
			        <%= f.select :production_status, OrderDetail.production_statuses_i18n.invert %>
			        <%= f.submit '更新' ,class: "btn btn-success" %>
			      </td>
			      <% end %>
          </tr>
          <%end%>
        </tbody>
      </table>
			<table class="col-3">
				<tr>
        	<th>商品合計</th>
					<td>¥<%= 800 %></td>
				</tr>
				<tr>
					<th>送料</th>
					<td>¥<%= @order.postage.to_s(:delimited) %></td>
				</tr>
				<tr>
					<th>請求金額合計</th>
					<td>¥<%= 800 %></td>
				</tr>
	    </table>
	  </div>
  </div>
</div>