<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <h5 class="my-5">
        <span class="midashi px-3">注文履歴一覧</span>
      </h5>
    </div>
  </div>

  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th scope="col">購入日時</th>
            <th scope="col">購入者</th>
            <th scope="col">注文個数</th>
            <th scope="col">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order|%>
          <tr>
            <td><%= link_to admins_order_path(order) do %>
              <%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
                <% end %>
            </td>
            <td><%= order.name %></td>
            <td><%= order.order_details.sum(:quantity) %></td>
            <td> <%= order.order_status %></td>
          </tr>
        </tbody>
        <%end%>
      </table>

      <div class="row">
        <div class="mx-auto" style="text-decoration:underline;">
          <%#= paginate @orders %>
        </div>
      </div>
    </div>
  </div>
</div>

