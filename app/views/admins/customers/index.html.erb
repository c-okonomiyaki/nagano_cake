<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <h5 class="my-5">
        <span class="midashi px-3">会員一覧</span>
      </h5>
    </div>
  </div>

  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <%@customers.each do |customer|%>
          <tr>
            <td><%=customer.id%></td>
            <td class="text-dark" style="text-decoration:underline;" >
              <%=link_to customer.full_name,admins_customer_path(customer.id)%>
            </td>
            <td><%=customer.email%></td>
            <%if customer.is_deleted==false%>
              <td class="text-success font-weight-bold">有効</td>
            <%else%>
              <td class="text-muted font-weight-bold">退会</td>
            <%end%>
          </tr>
        </tbody>
        <%end%>
      </table>
      <div class="row">
        <div class="mx-auto" style="text-decoration:underline;">
          <%= paginate @customers%>
        </div>
      </div>
    </div>
  </div>
</div>

