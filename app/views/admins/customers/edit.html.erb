<div class="container">
    <div class="row">
        <h5 class="pb-4 mt-5">
            <span class="midashi px-3"><%=@customer.full_name%>さんの会員情報編集</span>
        </h5>
    </div>

    <%=form_with model:@customer,local:true do |f|%>
        <div class="form-group row">
          <div class="col-5">
            <%=f.label :氏名%>
          </div>
          <div class="col-3">
            <%=f.text_field :last_name%>
          </div>
          <div class="col-3">
            <%=f.text_field :first_name%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5">
            <%=f.label :フリガナ%>
          </div>
          <div class="col-3">
            <%=f.text_field :last_name_kana%>
          </div>
          <div class="col-3">
            <%=f.text_field :first_name_kana%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5">
            <%=f.label :郵便番号%>
          </div>
          <div class="col-7">
            <%=f.text_field :postcode%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5">
            <%=f.label :住所%>
          </div>
          <div class="col-7">
            <%=f.text_field :address,size:60%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5">
            <%=f.label :電話番号%>
          </div>
          <div class="col-7">
            <%=f.text_field :call_number%>
          </div>
        </div>


        <div class="form-group row">
          <div class="col-5">
            <%= f.label :メールアドレス %>
          </div>
          <div class="col-7">
            <%= f.email_field :email, autocomplete: "email"%>
          </div>
        </div>

        <div class="form-check row">
          <div class="col-5">
            <%= f.label :会員ステータス%>
          </div>
          <div class="col-7">
            <%= f.password_field :password%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5"></div>
          <div class="col-7">
            <%= f.submit "  変更を保存  " ,class:"btn btn-success"%>
          </div>
        </div>
    <% end %>
</div>

