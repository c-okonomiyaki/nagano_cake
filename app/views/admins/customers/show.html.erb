<div class="container">
    <div class="row">
        <h5 class="pb-4 mt-5">
            <span class="midashi px-3"><%=@customer.full_name%>さんの会員詳細</span>
        </h5>
    </div>

    <table class="table table-borderless">
        <tbody>
            <tr>
                <td>会員ID</td>
                <td><%=@customer.id%></td>
            </tr>
            <tr>
                <td>氏名</td>
                <td><%=@customer.last_name%> <%=@customer.first_name%></td>
            </tr>
            <tr>
                <td>フリガナ</td>
                <td><%=@customer.last_name_kana%> <%=@customer.first_name_kana%></td>
            </tr>
            <tr>
                <td>郵便番号</td>
                <td><%=@customer.postcode%></td>
            </tr>
            <tr>
                <td>住所</td>
                <td><%=@customer.address%></td>
            </tr>
            <tr>
                <td>電話番号</td>
                <td><%=@customer.call_number%></td>
            </tr>
            <tr>
                <td>メールアドレス</td>
                <td><%=@customer.email%></td>
            </tr>
            <tr>
                <td>会員ステータス</td>
                <%if @customer.is_deleted==false%>
                  <td class="text-success font-weight-bold">有効</td>
                <%else%>
                  <td class="text-muted font-weight-bold">退会</td>
                <%end%>
            </tr>
            <tr>
                <td></td>
                <td>
                    <%=link_to"編集する",edit_admins_customer(@customer.id),class:"btn btn-success"%>
                    <%=link_to"注文履歴一覧を見る",admins_orders,class:"btn btn-primary"%>
                </td>
            </tr>
        </tbody>
    </table>
</div>


