<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <h5 class="pb-4 mt-5">
        <span class="midashi px-3">ジャンル一覧・追加</span>
      </h5>
    </div>
  </div>

    <%= form_with model:@genre, url: 'genres',local:true do |f| %>
      <div class="form-group row">
        <div class="col-3">
          <%= f.label :"ジャンル名" %>
        </div>
        <div class="col-5">
          <%= f.text_field :genre_name, autofocus: true,:placeholder=>"ジャンル名" %>
        </div>
        <div class="col-3">
          <%=f.submit"   新規登録   ",class:"btn btn-success"%>
        </div>
      </div>
    <% end %>

    <div class="row py-5">
      <table class="table" >
        <thead class="bg-light">
          <tr>
            <th scope="col" style="border: none;">ジャンル</th>
            <th style="border: none;"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td style="border: none;"><%= genre.genre_name %></td>
            <td style="border: none;">
              <%=link_to"編集する",edit_admins_genre_path(genre.id),class:"btn btn-success mr-2"%>
            </td>
          </tr>
        </tbody>
        <%end%>
      </table>
    </div>
</div>