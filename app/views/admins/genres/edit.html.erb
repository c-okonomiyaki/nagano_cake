<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <h5 class="pb-4 mt-5">
        <span class="midashi px-3">ジャンル編集</span>
      </h5>
    </div>
  </div>

    <%= form_with model:@genre, url: admins_genre_path(@genre.id),local:true do |f| %>
      <div class="form-group row">
        <div class="col-3">
          <%= f.label :"ジャンル名" %>
        </div>
        <div class="col-5">
          <%= f.text_field :genre_name, autofocus: true,:placeholder=>"ジャンル名" %>
        </div>
        <div class="col-3">
          <%= f.submit"   変更を保存   ",class:"btn btn-success" %>
        </div>
      </div>
    <% end %>
</div>
